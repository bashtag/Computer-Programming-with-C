all: clear clean compile run

compile: 210104004253.c
	@echo "-------------------------------------------"
	@echo "Compiling..."
	@gcc -c 210104004253.c -o 210104004253.o
	@gcc 210104004253.o -lm -o 210104004253.out

run:
	@echo "-------------------------------------------"
	@echo "Running the tests...."
	@echo "================================================================================="
	./210104004253.out
	@echo "================================================================================="
	@echo "Completed tests...."

clear:
	@clear

clean:
	@echo "-------------------------------------------"
	@echo "Removing compiled files..."
	@rm -f *.out
	@rm -f *.o